<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="DecoradoImageView">
        <attr name="img_src" format="reference" />
        <attr name="error_message" format="string"/>
        <attr name="android:scaleType"/>
        <attr name="img_default" format="reference"/>
        <attr name="img_height_default" format="integer"/>
        <attr name="img_width_default" format="integer"/>
        <attr name="need_default_image" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="CurrencyEditTextView">
        <attr name="currency_prefix" format="string" />
    </declare-styleable>

    <declare-styleable name="CustomPrefixEditText">
        <attr name="tag_text_color" format="color" />
    </declare-styleable>

    <declare-styleable name="EllipseView">
        <attr name="stroke_color" format="integer" />
        <attr name="stroke_width" format="integer" />
        <attr name="corner_radius" format="dimension" />
        <attr name="ellipse_background_color" format="color" />
        <attr name="ellipse_disable" format="boolean" />
    </declare-styleable>

    <declare-styleable name="CircleImageView">
        <attr name="civ_border_width" format="dimension" />
        <attr name="civ_border_color" format="color" />
        <attr name="civ_border_overlay" format="boolean" />
        <attr name="civ_fill_color" format="color" />
    </declare-styleable>

    <declare-styleable name="RatioImageView">
        <attr name="width_ratio" format="integer" />
        <attr name="height_ratio" format="integer" />
    </declare-styleable>
</resources>